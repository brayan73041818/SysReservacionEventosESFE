@model SysReservacionEventosESFE.EntidadesDeNegocio.EspaciosA

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">
                DISPONIBLE
            </dd>
        }
        else if (Model.Status == 2)
        {
            <dd class="col-sm-10">
                OCUPADO
            </dd>
        }
        else
        {
            <dd class="col-sm-10"> </dd>
        }

    </dl>

    @* FUNCTION ELIMINAR ROL*@
    @using (Html.BeginForm("Delete", "EspaciosA", new { IdEspaciosA = Model.IdEspaciosA }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar?');" style="margin-left: 10px;">
            <i class="fas fa-trash"></i> Eliminar
        </button>

        <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Index")'" style="margin-left: 10px;">
            <i class="fas fa-times"></i> Cancelar
        </button>
        <span class="text-danger">@ViewBag.Error</span>
    }

</div>