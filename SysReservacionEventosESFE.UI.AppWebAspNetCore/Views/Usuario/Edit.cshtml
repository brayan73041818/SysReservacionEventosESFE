@model SysReservacionEventosESFE.EntidadesDeNegocio.Usuario

@{
    ViewData["Title"] = "Edit";
    List<SysReservacionEventosESFE.EntidadesDeNegocio.Rol> roles = ViewBag.Roles as List<SysReservacionEventosESFE.EntidadesDeNegocio.Rol>;

}

<h1>Modificar Usuario</h1>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Estatus" class="control-label"></label>
                <select asp-for="Estatus" class="form-control">
                    <option selected value="">SELECCIONAR</option>
                    @if (Model.Estatus == 1)
                    {
                        <option selected value="1">ACTIVO</option>
                    }
                    else
                    {
                        <option value="1">ACTIVO</option>
                    }
                    @if (Model.Estatus == 2)
                    {
                        <option selected value="2">INACTIVO</option>
                    }
                    else
                    {
                        <option value="2">INACTIVO</option>
                    }

                </select>
                <span asp-validation-for="Estatus" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="IdRol" class="control-label"></label>
                <select asp-for="IdRol" class="form-control">
                    <option selected value="">SELECCIONAR</option>
                    @foreach (var item in roles)
                    {
                        if (Model.IdRol == item.Id)
                        {
                            <option selected value="@item.Id">@item.Nombre</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Nombre</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Contraseña Nueva</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ConfirmPassword_aux" class="control-label">Confirmar Contraseña Nueva</label>
                <input asp-for="ConfirmPassword_aux" class="form-control" />
                <span asp-validation-for="ConfirmPassword_aux" class="text-danger"></span>

            </div>
        </div>
    </div>

    @*BOTONES EDITADOS CON ICONOS*@

    <div class="form-group" style="margin-top: 10px;">
        <button type="submit" class="btn btn-success" style="margin-right: 10px;">
            <i class="fas fa-save"></i> Guardar
        </button>

        <button type="button" class="btn btn-danger" onclick="window.location.href='@Url.Action("Index")'" style="margin-left: 10px;">
            <i class="fas fa-times"></i> Cancelar
        </button>
    </div>

</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $("form input[name],form select[name]").trigger("blur");
        });
    </script>
}
